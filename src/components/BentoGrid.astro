              <text x="10" y="18" fill="#37322F" font-family="ui-monospace, monospace">0xa1…</text>
            </g>
          </g>
        </svg>
        <div class="absolute bottom-0 left-0 right-0 h-8 bg-gradient-to-t from-stone-50 to-transparent pointer-events-none"></div>
      </div>
    </div>
  </div>

  <div class="w-4 sm:w-6 md:w-8 lg:w-12 self-stretch relative overflow-hidden">
    <!-- Right decorative pattern -->
    <div class="w-[120px] sm:w-[140px] md:w-[162px] right-[-40px] sm:right-[-50px] md:right-[-58px] top-[-120px] absolute flex flex-col justify-start items-start">
      {Array.from({ length: 200 }).map(() => (
        <div class="self-stretch h-3 sm:h-4 rotate-[-45deg] origin-top-left outline outline-[0.5px] outline-[rgba(3,7,18,0.08)] outline-offset-[-0.25px]"></div>
      ))}
    </div>
  </div>
  </div>
</div>

<style>
  /* kill global icon resets that might fill the paths */
  .syn-memory path,
  .syn-memory polyline {
    fill: none;
  }
</style>
