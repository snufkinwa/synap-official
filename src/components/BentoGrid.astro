            </g>

            <!-- Row 3 -->
            <g transform="translate(0,120)">
              <rect width="40" height="28" rx="6" fill="#FFFFFF" stroke="#0000000f" />
              <text x="10" y="18" fill="#37322F">44</text>
            </g>
            <g transform="translate(50,120)">
              <rect width="120" height="28" rx="6" fill="#FFFFFF" stroke="#0000000f" />
              <text x="10" y="18" fill="#37322F">ops-γ</text>
            </g>
            <g transform="translate(180,120)">
              <rect width="120" height="28" rx="6" fill="#FFFFFF" stroke="#0000000f" />
              <text x="10" y="18" fill="#37322F">rotate_keys</text>
            </g>
            <g transform="translate(310,120)">
              <rect width="110" height="28" rx="6" fill="#FFFFFF" stroke="#0000000f" />
              <text x="10" y="18" fill="#37322F">sec.v1.1</text>
            </g>
            <g transform="translate(430,120)">
              <rect width="70" height="28" rx="6" fill="#FFFFFF" stroke="#0000000f" />
              <circle cx="14" cy="14" r="5" fill="#16A34A" />
