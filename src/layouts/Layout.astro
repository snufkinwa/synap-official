---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';

interface Props {
	title?: string;
	description?: string;
	image?: string;
	type?: 'website' | 'article';
	publishedTime?: string;
	author?: string;
	keywords?: string;
	noindex?: boolean;
}

const {
  title = 'Synaptik Core – The Cognitive Substrate for Verifiable AI',
  description = 'A cognitive substrate that unifies governance, memory, and audit across the AI lifecycle—adding policy enforcement, verifiable lineage, and cryptographic trust to your existing stack.',
  image = '/synaptik-bannersocial.png',
  type = 'website',
  publishedTime,
  author = 'Synaptik Core',
  keywords = 'AI governance, AI audit, AI lifecycle, cognitive substrate, trustworthy AI, AI compliance, AI memory, ML governance, LLM governance, responsible AI',
  noindex = false
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL(image, Astro.site);

// Build structured data object
const structuredData: Record<string, any> = {
	"@context": "https://schema.org",
	"@type": type === 'article' ? 'Article' : 'WebSite',
	"name": title,
	"description": description,
	"url": canonicalURL.toString(),
	"image": imageURL.toString(),
	"author": {
		"@type": "Organization",
		"name": author
	}
};

// Add article-specific fields if applicable
if (publishedTime && type === 'article') {
	structuredData.datePublished = publishedTime;
	structuredData.publisher = {
		"@type": "Organization",
		"name": "Synaptik Core",
		"logo": {
			"@type": "ImageObject",
			"url": imageURL.toString()
		}
	};
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/synaptik-logo.png" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content={author} />
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Google Search Console Verification -->
		<!-- <meta name="google-site-verification" content="YOUR_VERIFICATION_CODE" /> -->
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={imageURL} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:alt" content={title} />
		<meta property="og:site_name" content="Synaptik Core" />
		<meta property="og:locale" content="en_US" />
		{publishedTime && <meta property="article:published_time" content={publishedTime} />}
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@synaptikcore" />
		<meta name="twitter:creator" content="@synaptikcore" />
		<meta name="twitter:url" content={canonicalURL} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={imageURL} />
		<meta name="twitter:image:alt" content={title} />
		
		<!-- LinkedIn -->
		<meta property="og:image" content={imageURL} />
		<meta property="og:image:type" content="image/png" />
		
		<!-- Additional SEO -->
		<meta name="robots" content={noindex ? 'noindex, nofollow' : 'index, follow'} />
		<meta name="googlebot" content={noindex ? 'noindex, nofollow' : 'index, follow'} />
		<meta name="language" content="English" />
		<meta name="revisit-after" content="7 days" />
		
		<!-- JSON-LD Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
		
		<ClientRouter />
	</head>
	<body class="bg-stone-50">
		<slot />
		<script>
			const initFadeObserver = () => {
				const fadeElements = () => document.querySelectorAll('[data-fade]');

				const revealAll = () => {
					fadeElements().forEach((el) => el.classList.add('is-visible'));
				};

				if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
					revealAll();
					document.addEventListener('astro:after-swap', revealAll);
					document.addEventListener('astro:page-load', revealAll);
					return;
				}

				const observer = new IntersectionObserver(
					(entries) => {
						entries.forEach((entry) => {
							if (entry.isIntersecting) {
								entry.target.classList.add('is-visible');
								observer.unobserve(entry.target);
							}
						});
					},
					{
						threshold: 0.15,
						rootMargin: '0px 0px -10% 0px'
					}
				);

				const observeElements = () => {
					fadeElements().forEach((el) => {
						if (((el as HTMLElement).dataset?.fadeObserved === 'true') || el.classList.contains('is-visible')) {
							return;
						}
						(el as HTMLElement).dataset.fadeObserved = 'true';
						observer.observe(el);
					});
				};

				observeElements();
				document.addEventListener('astro:after-swap', observeElements);
				document.addEventListener('astro:page-load', observeElements);
			};

			if (document.readyState === 'loading') {
				document.addEventListener('DOMContentLoaded', initFadeObserver, { once: true });
			} else {
				initFadeObserver();
			}
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
